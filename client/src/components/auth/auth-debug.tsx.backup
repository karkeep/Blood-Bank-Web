// client/src/components/auth/auth-debug.tsx
import { useAuth } from "@/hooks/use-auth-firebase";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Badge } from "@/components/ui/badge";
import { User, Mail, Shield, Key, Clock } from "lucide-react";

export function AuthDebug() {
  const { user, firebaseUser, isLoading, initialized } = useAuth();
  
  if (!initialized) {
    return <div className="text-center p-4">Initializing authentication...</div>;
  }
  
  return (
    <Card className="w-full max-w-2xl mx-auto">
      <CardHeader>
        <CardTitle className="flex items-center gap-2">
          <Shield className="w-5 h-5" />
          Authentication Debug Info
        </CardTitle>
      </CardHeader>
      <CardContent className="space-y-4">
        {/* Auth Status */}
        <div className="flex items-center gap-2">
          <span className="font-semibold">Status:</span>
          <Badge variant={user ? "success" : "secondary"}>
            {isLoading ? "Loading..." : user ? "Authenticated" : "Not Authenticated"}
          </Badge>
        </div>
        
        {/* User Info */}
        {user && (
          <>
            <div className="border rounded-lg p-4 space-y-3">
              <h3 className="font-semibold text-lg">User Data</h3>
              
              <div className="grid grid-cols-2 gap-3 text-sm">
                <div className="flex items-center gap-2">
                  <User className="w-4 h-4 text-muted-foreground" />
                  <span className="font-medium">Username:</span>
                  <span>{user.username}</span>
                </div>
                
                <div className="flex items-center gap-2">
                  <Mail className="w-4 h-4 text-muted-foreground" />
                  <span className="font-medium">Email:</span>
                  <span>{user.email}</span>
                </div>
                
                <div className="flex items-center gap-2">
                  <Shield className="w-4 h-4 text-muted-foreground" />
                  <span className="font-medium">Role:</span>
                  <Badge variant={user.role === 'admin' || user.role === 'superadmin' ? 'destructive' : 'default'}>
                    {user.role}
                  </Badge>
                </div>
                
                <div className="flex items-center gap-2">
                  <Key className="w-4 h-4 text-muted-foreground" />
                  <span className="font-medium">Admin:</span>
                  <Badge variant={user.isAdmin ? 'destructive' : 'secondary'}>
                    {user.isAdmin ? 'Yes' : 'No'}
                  </Badge>
                </div>
              </div>
              
              <div className="text-xs text-muted-foreground">
                Firebase UID: {user.firebaseUid}
              </div>
            </div>
            
            {/* Expected Redirect */}
            <div className="border rounded-lg p-4 bg-muted/50">
              <h3 className="font-semibold text-sm mb-2">Expected Dashboard Redirect</h3>
              <p className="text-sm">
                Based on your role <Badge variant="outline">{user.role}</Badge>, you should be redirected to:
              </p>
              <p className="font-mono text-sm mt-1 text-primary">
                {user.role === 'superadmin' && '/dashboard → Super Admin Dashboard'}
                {user.role === 'admin' && '/dashboard → Admin Dashboard'}
                {user.role === 'moderator' && '/dashboard → Moderator Dashboard'}
                {user.role === 'volunteer' && '/dashboard → Volunteer Dashboard'}
                {(user.role === 'donor' || user.role === 'user') && '/dashboard → User Dashboard'}
              </p>
            </div>
          </>
        )}
        
        {/* Firebase User Info */}
        {firebaseUser && (
          <div className="border rounded-lg p-4 space-y-2 text-sm">
            <h3 className="font-semibold">Firebase Auth User</h3>
            <div className="space-y-1 text-xs">
              <p>UID: {firebaseUser.uid}</p>
              <p>Email: {firebaseUser.email}</p>
              <p>Display Name: {firebaseUser.displayName || 'Not set'}</p>
              <p className="flex items-center gap-1">
                <Clock className="w-3 h-3" />
                Last Sign In: {firebaseUser.metadata.lastSignInTime}
              </p>
            </div>
          </div>
        )}
      </CardContent>
    </Card>
  );
}
